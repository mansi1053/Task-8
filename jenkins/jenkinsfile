pipeline {
    agent any

    tools {
        maven 'Maven_3.8.6'  
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/mansi1053/Task-8.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }
}
